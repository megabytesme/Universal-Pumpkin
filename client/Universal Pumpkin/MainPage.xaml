<Page
    x:Class="Universal_Pumpkin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource AppBackgroundAcrylic}">

    <Page.Resources>
        <AcrylicBrush x:Key="NavPaneAcrylic"
                  BackgroundSource="HostBackdrop"
                  TintColor="{ThemeResource SystemChromeMediumColor}"
                  TintOpacity="0.6"
                  FallbackColor="{ThemeResource SystemChromeMediumColor}" />

        <Style x:Key="HamburgerButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonRevealStyle}">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

    </Page.Resources>

    <SplitView x:Name="RootSplitView"
               DisplayMode="CompactOverlay"
               IsPaneOpen="False"
               CompactPaneLength="48"
               OpenPaneLength="200">

        <SplitView.Pane>
            <StackPanel Background="{ThemeResource SystemControlAcrylicWindowBrush}">

                <Button x:Name="HamburgerButton"
                        Click="HamburgerButton_Click"
                        Style="{StaticResource HamburgerButtonStyle}">
                    <TextBlock Text="&#xE700;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="20"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>

                <ListBox x:Name="NavListBox" SelectionChanged="NavListBox_SelectionChanged" Background="Transparent">
                    <ListBoxItem Tag="Console">
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <TextBlock Text="&#xE7F8;" FontFamily="Segoe MDL2 Assets" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Console" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Tag="Settings">
                        <StackPanel Orientation="Horizontal" Padding="4">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18" VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </SplitView.Pane>

        <SplitView.Content>
            <Frame x:Name="ContentFrame"/>
        </SplitView.Content>
    </SplitView>
</Page>