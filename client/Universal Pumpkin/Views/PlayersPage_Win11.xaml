<Page
    x:Class="Universal_Pumpkin.Views.Win11.PlayersPage_Win11"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Universal_Pumpkin"
    xmlns:models="using:Universal_Pumpkin.Models"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        <local:OpLevelToVisConverter x:Key="OpLevelToVisConverter"/>
        <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <MenuFlyout x:Key="PlayerContextMenu">
            <MenuFlyoutItem Text="Operator (OP)"
                            Click="Menu_Op_Click"
                            Icon="AddFriend"/>
            <MenuFlyoutItem Text="De-Operator (Deop)"
                            Click="Menu_Deop_Click"
                            Icon="Remove"/>
            <MenuFlyoutSeparator/>
            <MenuFlyoutSubItem Text="Gamemode"
                               Icon="World">
                <MenuFlyoutItem Text="Survival"
                                Click="Menu_Gm_Click"
                                Tag="survival"/>
                <MenuFlyoutItem Text="Creative"
                                Click="Menu_Gm_Click"
                                Tag="creative"/>
                <MenuFlyoutItem Text="Spectator"
                                Click="Menu_Gm_Click"
                                Tag="spectator"/>
                <MenuFlyoutItem Text="Adventure"
                                Click="Menu_Gm_Click"
                                Tag="adventure"/>
            </MenuFlyoutSubItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="Kick"
                            Click="Menu_Kick_Click"
                            Icon="BlockContact"/>
            <MenuFlyoutItem Text="Ban Player"
                            Click="Menu_Ban_Click"
                            Icon="Cancel"/>
            <MenuFlyoutItem Text="Ban IP Address"
                            Click="Menu_BanIp_Click"
                            Icon="Globe"/>
        </MenuFlyout>

        <DataTemplate x:Key="PlayerCardTemplate"
                      x:DataType="models:PlayerData">
            <Border Width="300"
                    Height="135"
                    CornerRadius="8"
                    Margin="6"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    RightTapped="Player_RightTapped"
                    Holding="Player_Holding"
                    FlyoutBase.AttachedFlyout="{StaticResource PlayerContextMenu}">

                <Grid Padding="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Spacing="6"
                                VerticalAlignment="Top">
                        <Grid Width="48"
                              Height="48">
                            <PersonPicture ProfilePicture="{x:Bind HeadUrl}"
                                           Width="48"
                                           Height="48"
                                           Initials="{x:Bind Username}"/>
                            <Border Background="#AA000000"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Stretch"
                                    Padding="0,1">
                                <TextBlock Text="{x:Bind Platform}"
                                           FontSize="10"
                                           HorizontalAlignment="Center"
                                           Foreground="White"/>
                            </Border>
                        </Grid>

                        <Border Background="#FFFF5555"
                                CornerRadius="4"
                                Padding="4,0"
                                HorizontalAlignment="Center"
                                Visibility="{x:Bind PermissionLevel, Converter={StaticResource OpLevelToVisConverter}}">
                            <TextBlock Text="OP"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>

                        <Border Background="#FF555555"
                                CornerRadius="4"
                                Padding="4,0"
                                HorizontalAlignment="Center">
                            <TextBlock Text="{x:Bind Gamemode}"
                                       FontSize="10"
                                       Foreground="#FFFFAA00"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Margin="12,0,0,0"
                                Spacing="2">
                        <TextBlock Text="{x:Bind Username}"
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{x:Bind Uuid}"
                                   Style="{ThemeResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextTrimming="CharacterEllipsis"/>

                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"
                                        Grid.Column="0"
                                        Spacing="4">
                                <FontIcon Glyph="&#xEB52;"
                                          FontSize="12"
                                          Foreground="#FFFF5555"/>
                                <TextBlock Text="{x:Bind Health}"
                                           Style="{ThemeResource CaptionTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Spacing="2">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="4">
                                    <FontIcon Glyph="&#xE734;"
                                              FontSize="12"
                                              Foreground="#FF55FF55"/>
                                    <TextBlock Text="{x:Bind ExpLevel}"
                                               Foreground="#FF55FF55"
                                               FontWeight="Bold"
                                               FontSize="12"/>
                                </StackPanel>
                                <ProgressBar Value="{x:Bind ExpProgress}"
                                             Maximum="1.0"
                                             Height="4"
                                             Foreground="#FF55FF55"
                                             Background="#3355FF55"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock FontSize="11"
                                   Margin="0,4,0,0"
                                   FontFamily="Consolas">
                        <Run Text="X:"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Run Text="{x:Bind Position.FmtX}"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        <Run Text=" Y:"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Run Text="{x:Bind Position.FmtY}"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        <Run Text=" Z:"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <Run Text="{x:Bind Position.FmtZ}"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="PlayerPickerTemplate"
                      x:DataType="models:PlayerData">
            <Grid Padding="8,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <PersonPicture Grid.Column="0"
                               ProfilePicture="{x:Bind HeadUrl}"
                               Width="32"
                               Height="32"
                               Margin="0,0,12,0"/>
                <StackPanel Grid.Column="1"
                            VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind Username}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{x:Bind Uuid}"
                               FontSize="10"
                               Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Pivot x:Name="MainPivot"
               SelectionChanged="MainPivot_SelectionChanged">
            <PivotItem Header="Online">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CommandBar Background="Transparent"
                                DefaultLabelPosition="Right">
                        <AppBarButton Icon="Refresh"
                                      Label="Refresh"
                                      Click="BtnRefresh_Click"/>
                    </CommandBar>

                    <GridView x:Name="PlayerGrid"
                              Grid.Row="1"
                              Padding="12"
                              SelectionMode="None"
                              IsItemClickEnabled="False"
                              ItemsSource="{x:Bind _vm.PlayersList}"
                              ItemTemplate="{StaticResource PlayerCardTemplate}"/>

                    <StackPanel x:Name="NoPlayersPanel"
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Spacing="12"
                                Visibility="Collapsed">
                        <FontIcon Glyph="&#xE716;"
                                  FontSize="48"
                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                        <TextBlock x:Name="NoPlayersText"
                                   Text="No players online"
                                   Style="{ThemeResource SubtitleTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                    </StackPanel>
                </Grid>
            </PivotItem>

            <PivotItem Header="Operators">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Background="Transparent"
                                DefaultLabelPosition="Right">
                        <AppBarButton Icon="Add"
                                      Label="Add Op"
                                      Click="BtnAddOp_Click"/>
                        <AppBarButton Icon="Refresh"
                                      Label="Refresh"
                                      Click="BtnRefreshManagement_Click"/>
                    </CommandBar>

                    <ListView x:Name="ListOps"
                              Grid.Row="1"
                              SelectionMode="None"
                              ItemsSource="{x:Bind _vm.OpsList}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:OpEntry">
                                <Grid Padding="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <PersonPicture ProfilePicture="{x:Bind HeadUrl}"
                                                   Width="32"
                                                   Height="32"
                                                   Margin="0,0,12,0"/>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Name}"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Uuid}"
                                                   FontSize="12"
                                                   Foreground="Gray"/>
                                    </StackPanel>
                                    <Button Grid.Column="2"
                                            Content="Remove"
                                            Click="BtnRemoveOp_Click"
                                            Tag="{x:Bind}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>

            <PivotItem Header="Bans">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Background="Transparent"
                                DefaultLabelPosition="Right">
                        <AppBarButton Icon="Add"
                                      Label="Ban Player"
                                      Click="BtnAddBan_Click"/>
                        <AppBarButton Icon="Refresh"
                                      Label="Refresh"
                                      Click="BtnRefreshManagement_Click"/>
                    </CommandBar>
                    <ListView x:Name="ListBans"
                              Grid.Row="1"
                              SelectionMode="None"
                              ItemsSource="{x:Bind _vm.BansList}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:BanEntry">
                                <Grid Padding="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <PersonPicture ProfilePicture="{x:Bind HeadUrl}"
                                                   Width="32"
                                                   Height="32"
                                                   Margin="0,0,12,0"/>
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Name}"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Reason}"
                                                   Foreground="Red"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    <Button Grid.Column="2"
                                            Content="Pardon"
                                            Click="BtnRemoveBan_Click"
                                            Tag="{x:Bind}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>

            <PivotItem Header="IP Bans">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <CommandBar Background="Transparent"
                                DefaultLabelPosition="Right">
                        <AppBarButton Icon="Add"
                                      Label="Ban IP"
                                      Click="BtnAddIpBan_Click"/>
                        <AppBarButton Icon="Refresh"
                                      Label="Refresh"
                                      Click="BtnRefreshManagement_Click"/>
                    </CommandBar>
                    <ListView x:Name="ListIpBans"
                              Grid.Row="1"
                              SelectionMode="None"
                              ItemsSource="{x:Bind _vm.IpBansList}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:IpBanEntry">
                                <Grid Padding="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind Ip}"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Reason}"
                                                   Foreground="Red"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Content="Pardon"
                                            Click="BtnRemoveIpBan_Click"
                                            Tag="{x:Bind}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>