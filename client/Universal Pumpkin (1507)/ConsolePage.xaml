<Page
    x:Class="Universal_Pumpkin.ConsolePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="StatusGrid"
              Grid.Row="0"
              Margin="15,15,15,0"
              Visibility="Collapsed"
              Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
              BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}"
              BorderThickness="1"
              Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        VerticalAlignment="Center">
                <TextBlock Text="Server Address"
                           FontSize="10"
                           Foreground="Gray"/>
                <TextBlock x:Name="TxtIpAddress"
                           Text="127.0.0.1"
                           FontWeight="Bold"
                           FontSize="16"
                           IsTextSelectionEnabled="True"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Margin="24,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock Text="TPS"
                           FontSize="10"
                           Foreground="Gray"
                           HorizontalAlignment="Right"/>
                <TextBlock x:Name="TxtTPS"
                           Text="20.0"
                           FontWeight="Bold"
                           Foreground="#FF55FF55"
                           HorizontalAlignment="Right"/>
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Margin="24,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock Text="MSPT"
                           FontSize="10"
                           Foreground="Gray"
                           HorizontalAlignment="Right"/>
                <TextBlock x:Name="TxtMSPT"
                           Text="12.50ms"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Right"/>
            </StackPanel>

            <StackPanel Grid.Column="3"
                        Margin="24,0,0,0"
                        VerticalAlignment="Center">
                <TextBlock Text="Mem"
                           FontSize="10"
                           Foreground="Gray"
                           HorizontalAlignment="Right"/>
                <TextBlock x:Name="TxtRAM"
                           Text="150 MB"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>

        <ScrollViewer x:Name="LogScroller"
                      Grid.Row="1"
                      Margin="15"
                      Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
            <TextBlock x:Name="TxtLog"
                       TextWrapping="Wrap"
                       FontFamily="Consolas"
                       FontSize="14"
                       IsTextSelectionEnabled="True"/>
        </ScrollViewer>

        <Grid Grid.Row="2"
              Padding="15,0,15,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <AutoSuggestBox x:Name="BoxCommand"
                            PlaceholderText="Enter command (e.g. op)"
                            IsEnabled="False"
                            TextChanged="BoxCommand_TextChanged"
                            QuerySubmitted="BoxCommand_QuerySubmitted"
                            SuggestionChosen="BoxCommand_SuggestionChosen"
                            UpdateTextOnSelect="False"/>
            <Button x:Name="BtnSend"
                    Grid.Column="1"
                    Content="Send"
                    Click="BtnSend_Click"
                    Margin="10,0,0,0"
                    IsEnabled="False"/>
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <TextBlock x:Name="TxtStatus"
                           Text="Ready to Launch"
                           VerticalAlignment="Center"
                           Margin="14,14"/>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="BtnStart"
                              Label="Start Server"
                              Icon="Play"
                              Click="BtnStart_Click"/>
                <AppBarButton x:Name="BtnStop"
                              Label="Stop Server"
                              Icon="Stop"
                              Click="BtnStop_Click"
                              Visibility="Collapsed"/>
                <AppBarButton x:Name="BtnRestartApp"
                              Label="Restart App"
                              Icon="Refresh"
                              Click="BtnRestartApp_Click"
                              Visibility="Collapsed"/>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>